{
    "version": 2,
    "builds": [
      {
        "src": "index.js",
        "use": "@vercel/node"
      },
      {
        "src": "public/*",
        "use": "@vercel/static"
      }
    ],
    "routes": [
      {
        "src": "/(index.html)?",
        "dest": "/public/index.html"
      },
      {
        "src": "/app.js",
        "dest": "/public/app.js"
      },
      {
        "src": "/ask",
        "dest": "/index.js"
      }
    ],
    "env": {
      "OPENAI_API_KEY": "@openai_api_key"
    }
}
  